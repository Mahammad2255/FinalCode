@model Blog
    <link href="~/css/blog-detail.css" rel="stylesheet" />
<section id="blog-detail-section">
    <div class="blog-img">
        <img src="https://img.freepik.com/premium-photo/woman-works-…-computer-freelance-banner_164357-1144.jpg?w=2000
                "
             alt="" />
        <h1>Latest Blogs</h1>
    </div>
</section>

<section id="blog-box-section" style="margin-top:50px;">
    <div class="container">

        <div class="blog-box  d-flex" style="text-align: left;">
            <div class="blog-img col-lg-6">
                <img src="~/assets/images/blog/@Model.Image"
                     alt=""/>
            </div>
            <div class="blog-info col-lg-5">
                <h1>@Model.Title</h1>

                <p>
                 @Model.Description
                </p>

            </div>
         
        </div>
    </div>
</section>