@model Blog
@{ ViewData["Title"] = "Create"; }

<div class="row">
    <div class="col-lg-6 h3 mb-4 text-gray-800">
        <h1>Create new Blog</h1>
    </div>
    <div class="col-lg-12 mx-auto">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" placeholder="Enter title">
                <span style="color:red;" asp-validation-for="Title"></span>

            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" placeholder="Enter Description">
                <span style="color:red;" asp-validation-for="Description"></span>

            </div>

            <div class="form-group">
                <label asp-for="BlogImage"></label>
                <input class="form-control" accept="image/png" asp-for="BlogImage" placeholder="Enter ProductImagesFile">
                <span class="text-danger" asp-validation-for="BlogImage"></span>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

@section Script{
    <partial name="_ValidationFormScriptPartial">
}
